pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
               //sh 'cd devops-build/build'
               sh 'echo "print build"'
            }
        }
        stage('docker-build') {
            steps {
               sh 'echo "Docker Build"'
               sh 'pwd'
               sh 'cd build'
               sh 'npm install -g serve'
               // sh 'cd coit-backend1 && docker build -t amol1996/coit-backend1-92234832:v2 .'
               // sh 'docker images' 
            }
        }
        stage('docker-push') {
            steps {
                sh 'echo "Docker Deploy"'
                sh 'serve -s build'
                // sh 'echo "pushing docker image"'
                // sh 'docker push amol1996/coit-backend1-92234832:v2'
            }
    }
}
}
