pipeline {
    agent any
    environment {
        DOCKER_REGISTRY = "https://hub.docker.com/"
        DOCKER_USERNAME = credentials('1-username') // Jenkins credentials ID
        DOCKER_PASSWORD = credentials('dckr_pat_3-rTjN-OATYlCTaTh5yg-APdUsw') // Jenkins credentials ID
           }
    stages {
        stage('Login to Docker Registry') {
            steps {
                script {
                sh "echo $DOCKER_PASSWORD | docker login $DOCKER_REGISTRY --username $DOCKER_USERNAME --password-stdin"
                }
            }
        }
        stage('Build') {
            steps {
               //sh 'cd devops-build/build'
               sh 'echo "print build"'
            }
        }
        stage('docker-build') {
            steps {
               sh 'echo "Docker Build"'
               sh 'pwd'
               sh 'cd build'
               sh 'ls'
               sh 'pwd'
               //sh 'cd ./build# '
               sh 'pwd'
               sh 'chmod +x ./build/build.sh ./build/deploy.sh'
               sh 'docker-compose down'
               //sh 'docker stop $(docker ps)'
               //sh 'docker rm $(docker ps -a -q)'
               //sh 'npm install -g serve'
               // sh 'cd coit-backend1 && docker build -t amol1996/coit-backend1-92234832:v2 .'
               sh 'docker images' 
               sh 'docker ps'
               //sh 'docker stop $(docker ps -q)'
               //sh 'docker build -t my-nginx-app:latest ./build'
               //sh 'docker run -d -p 80:80 my-nginx-app:v1'
               sh 'docker-compose up --build -d' 
               sh 'docker ps'
            }
        }
        stage('docker-push') {
            steps {
                sh 'echo "Docker Push"'
                sh 'docker tag project-ci-cd2-react-app vijayr2024/reactecommerce:latest'
                sh 'docker push vijayr2024/reactecommerce:latest'
            }
    }
}
}
